<Page
    x:Class="HotelManagement.RegAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HotelManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <TextBlock
            Margin="5"
            FontFamily="{StaticResource Light}"
            TextWrapping="Wrap">
            To register please confirm your password then insert the admin password.<LineBreak />
            (Note: This doesn't replace your password into admin password)</TextBlock>
        <PasswordBox
            x:Name="mainPassword"
            Margin="5"
            PlaceholderText="Account Password" />
        <PasswordBox
            x:Name="adminPassword"
            Margin="5"
            PlaceholderText="Admin Password" />
    </StackPanel>
</Page>
