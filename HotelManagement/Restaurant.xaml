<Page
    x:Class="HotelManagement.Restaurant"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HotelManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource ApplicationPageBackgroundThemeBrushV2}"
    FontFamily="{StaticResource Regular}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <FlipView
            x:Name="mainFlipView"
            AllowFocusOnInteraction="False"
            Background="Transparent"
            IsTabStop="False"
            Style="{StaticResource FlipViewStyle1}">
            <FlipView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </FlipView.ItemsPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <ParallaxView
                    x:Name="parallax1"
                    Grid.Row="0"
                    VerticalShift="400">
                    <Grid>
                        <Image
                            Margin="0,200,0,100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="Assets/Home/Restaurant5.jpg"
                            Stretch="UniformToFill" />
                    </Grid>
                </ParallaxView>
                <Grid
                    Grid.Row="0"
                    Margin="0,0,0,-5"
                    Background="{StaticResource NormalGradient}" />
                <StackPanel
                    Grid.RowSpan="2"
                    Margin="0,50"
                    VerticalAlignment="Bottom">
                    <TextBlock
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontFamily="{StaticResource Black}"
                        FontSize="40"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        The Taste of Filipino Cousine
                    </TextBlock>
                    <TextBlock
                        Margin="80,0,80,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource Light}"
                        FontSize="18"
                        Opacity="0.7"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        Buffet Dine is the epicenter of Manila’s power dining, it has been a favorite spot for generations. It is a renaissance of chic casual dining which brings together a vast array of cuisines from across all continents.
                    </TextBlock>
                </StackPanel>

            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <ParallaxView
                    x:Name="parallax2"
                    Grid.Row="0"
                    VerticalShift="400">
                    <Grid>
                        <Image
                            Margin="0,100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="Assets/Home/Restaurant2.jpg"
                            Stretch="UniformToFill" />
                    </Grid>
                </ParallaxView>
                <Grid
                    Grid.Row="0"
                    Margin="0,0,0,-5"
                    Background="{StaticResource NormalGradient}" />
                <StackPanel
                    Grid.RowSpan="2"
                    Margin="0,50"
                    VerticalAlignment="Bottom">
                    <TextBlock
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontFamily="{StaticResource Black}"
                        FontSize="40"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        Stunning
                    </TextBlock>
                    <TextBlock
                        Margin="80,0,80,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource Light}"
                        FontSize="18"
                        Opacity="0.7"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        Designed artfully to satisfy the distinguishing palate, the spacious restaurant features an extensive selection of buffet delights with a fresh spin on its various open kitchens and a delectable desserts.
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <ParallaxView
                    x:Name="parallax3"
                    Grid.Row="0"
                    VerticalShift="400">
                    <Grid>
                        <Image
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="Assets/Home/Restaurant3.jpg"
                            Stretch="UniformToFill" />
                    </Grid>
                </ParallaxView>
                <Grid
                    Grid.Row="0"
                    Margin="0,0,0,-5"
                    Background="{StaticResource NormalGradient}" />
                <StackPanel
                    Grid.RowSpan="2"
                    Margin="0,50"
                    VerticalAlignment="Bottom">
                    <TextBlock
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontFamily="{StaticResource Black}"
                        FontSize="40"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        Book now!
                    </TextBlock>
                    <TextBlock
                        Margin="80,0,80,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource Light}"
                        FontSize="18"
                        Opacity="0.7"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        Taste the Filipino cousine that you'll never forget!
                    </TextBlock>
                    <Button
                        x:Name="btnReserve"
                        Margin="0,30,0,0"
                        Padding="30,15,30,15"
                        HorizontalAlignment="Center"
                        Background="#59FF9700"
                        Click="btnReserve_Click"
                        FontFamily="{StaticResource Thin}"
                        FontSize="20">
                        <Button.Resources>
                            <StaticResource x:Key="ButtonBackground" ResourceKey="SystemAccentColorDark1" />
                            <StaticResource x:Key="ButtonBackgroundPointerOver" ResourceKey="SystemAccentColorLight1" />
                            <StaticResource x:Key="ButtonBackgroundPressed" ResourceKey="SystemAccentColorDark3" />
                        </Button.Resources>
                        RESERVE NOW
                    </Button>
                </StackPanel>
            </Grid>

        </FlipView>

        <Grid
            Height="120"
            VerticalAlignment="Top"
            Background="{ThemeResource BackdropAcrylicBrush}">
            <StackPanel
                Margin="30,35,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    x:Name="HomeTitle"
                    Margin="0,0,15,0"
                    Padding="13,6,13,10"
                    Click="HomeTitle_Click"
                    FontFamily="{StaticResource Regular}"
                    FontSize="30"
                    Style="{StaticResource RoundedButtonStyleTrans}">
                    Home
                </Button>
                <Path
                    Width="10"
                    Height="15"
                    VerticalAlignment="Center"
                    Data="m317.25 231.04-32.855 34.188 114.84 110.85-114.84 110.7 32.855 34.188 132.6-127.87 17.758-17.02-17.758-17.168z"
                    Fill="{ThemeResource ApplicationForegroundThemeBrush}"
                    Stretch="Uniform" />
                <TextBlock
                    x:Name="Title"
                    Margin="25,-4,0,0"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Text="Restaurant" />

            </StackPanel>
        </Grid>
    </Grid>
</Page>
