                        x:Name="btnShowP1_details"
                        Margin="8"
                        Padding="20,10"
                        HorizontalAlignment="Center"
                        Click="btnShowP1_details_Click"
                        FontFamily="{ThemeResource Thin}"
                        FontSize="15">
                        Show more details
