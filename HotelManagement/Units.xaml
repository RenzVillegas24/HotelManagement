            AllowFocusOnInteraction="False"
            Background="Transparent"
            IsTabStop="False"
            Loaded="mainFlipView_Loaded"
            Style="{ThemeResource FlipViewStyle1}">
            <FlipView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
