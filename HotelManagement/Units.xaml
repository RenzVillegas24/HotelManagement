                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <ParallaxView
                    x:Name="parallax1"
                    Grid.Row="0"
                    VerticalShift="400">
                    <Grid>
                        <Image
